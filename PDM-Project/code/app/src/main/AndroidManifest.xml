<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pdm.chessroyale">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".puzzleofday.PuzzleOfDayApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_chess_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_chess_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name=".multiplayer.MultiplayerActivity"
            android:exported="false" />
        <activity
            android:name=".challenges.list.ChallengesListActivity"
            android:exported="false" />
        <activity
            android:name=".challenges.create.CreateChallengeActivity"
            android:exported="false" />
        <activity
            android:name=".singleplayer.SingleplayerActivity"
            android:exported="false" />
        <activity
            android:name=".history.HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".AboutActivity"
            android:exported="false" />
        <activity
            android:name=".puzzleofday.PuzzleOfDayActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>